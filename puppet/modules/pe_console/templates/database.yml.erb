common: &common
    database: <%= @db_database %>
    username: <%= @db_username %>
    password: '<%= @db_password %>'
    host: <%= @db_host %>
    port: <%= @db_port %>
    adapter: postgresql

development:
    <<: *common

production:
    <<: *common

test:
    database: <%= @db_database -%>_test
    <<: *common
